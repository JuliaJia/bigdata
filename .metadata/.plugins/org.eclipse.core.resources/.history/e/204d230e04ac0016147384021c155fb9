package algorithm;

public class StringGame2 {
	private static String[] words = {"this","two","fat","that"};
	private static char[][] gameChar = {{'t','h','i','s'},{'w','a','t','s'},{'o','a','h','g'},{'f','g','d','t'}};
	
	public static void main(String[] args) {
		String word1 = "";
		String word2 = "";
		String word3 = "";
		String word4 = "";
		String word5 = "";

		String direction;
		String[][][] wordCheck = {{{"right","down","rightdown"},{"down"},{"down"},{"left","down","leftdown"}},{{"right"},{"jump"},{"jump"},{"left"}},{{"right"},{"jump"},{"jump"},{"left"}},{{"right","up","rightup"},{"up"},{"up"},{"left","up","leftup"}}};
		for(int i = 0;i < wordCheck.length;i++){
			for(int j = 0;j < wordCheck[i].length;j++){
				for(int a = 0; a < wordCheck[i][j].length;a++){
					direction = wordCheck[i][j][a];
					switch (direction) {
					case "right":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						word1 = "";
						word2 = "";
						word3 = "";
						for(int b = 0; b < 4; b++){
							word1 = word1 + gameChar[i][b];
						}
						for(int c = 0 ; c < 3; c++){
							word2 = word2 + gameChar[i][c];
						}
						for(String d : words){
							//System.out.println(word);
							if(word1.equals(d)){
								word3 = word1;
							}else if(word2.equals(d)){
								word3 = word2;
							}
						}
						System.out.println(word3);
						break;
					case "down":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						word1 = "";
						word2 = "";
						word3 = "";
						word4 = "";
						word5 = "";
						for(int b = 0; b < 4; b++){
							word1 = "";
							for(int e = 0; e < 4; e++){
								word1 = word1 + gameChar[e][b];
							}
							word3 = word1;
							
						}
						for(int c = 0; c < 3; c++){
							word2 = "";
							for(int e = 0; e < 3; e++){
								word2 = word2 + gameChar[e][c];
								
							}
							word4 = word2;
							System.out.println(word4);
							
						}
						for(String d : words){
							System.out.println(word4);
							if(word3.equals(d)){
								//System.out.println(word1);
								word5 = word3;
							}else if(word4.equals(d)){
								//System.out.println(word2);
								word5 = word4;
							}
						}
						System.out.println(word5);
						break;
					case "up":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						break;
					case "left":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						break;
					case "leftup":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						break;
					case "leftdown":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						break;
					case "rightdown":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						break;
					case "rightup":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						break;
					case "jump":
						//System.out.println("(" + i + "," + j + "," + a + ")");
						break;
					default:
						break;
					}
				}
			}
		}

	}

}
