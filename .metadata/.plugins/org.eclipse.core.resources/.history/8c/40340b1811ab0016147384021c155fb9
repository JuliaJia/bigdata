package algorithm;

import javax.security.auth.kerberos.KerberosKey;

public class TimeCount {
	private static int init = 1;


	public static void main(String[] args) {
		int j = 1;
		int count = timeCount(20,init,j);
		System.out.println(count);


	}
	
	public static int count(int i){
		if(i == 1){
			++i;
			return i;
		}
		i++;
		return i;
	}
	public static int timeCount(int i , int init,int j){
		int a = j + init;
		int count = a - j;
		if(i > 1){
			
			timeCount(i/2,j,a);
			/*if(j == 1){
				++j;
				timeCount(i/2,j);
			}else{
				j++;
				timeCount(i/2,j);
			}*/
			//System.out.println(j);
		}else{
			count = a - j;
		}
		//System.out.println(i / 2);
		//System.out.println(j);

		return count;




		
		
	}

	
}
