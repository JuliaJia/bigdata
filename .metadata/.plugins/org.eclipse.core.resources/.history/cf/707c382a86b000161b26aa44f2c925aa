package algorithm.dataStructure.doubleLinkedList1;

import java.awt.HeadlessException;

public class Dlink {
	public Node head;
	public Node tail;
	public int count;
	public Dlink(Node head,Node tail,int count){
		head = null;
		tail = null;
		count = 0;
	}
	
	public Dlink(){
		head = null;
		tail = null;
		count = 0;
	}
	
	public void addBefour(int it){
		Node newNode = new Node(null,null,it);
		if(head == null && tail == null){
			head = newNode;
			head.setBefour(null);
			tail = newNode;
			tail.setNext(null);
		}else{
			head.setBefour(newNode);
			newNode.setNext(head);
			head = newNode;
			head.setBefour(null);
			
			
		}
		count++;
	}
	
	
	public void displayAll(){
		Node curr = head;
		while(curr != null){
			curr.display();
			curr = curr.next();
		}
		
	}
	

}
