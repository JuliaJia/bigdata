package algorithm;

public class powerYang {

	public static void main(String[] args) {
		powerLove(2, 4);

	}
	
	private static int powerLove(int X,int N){
		if(N == 0){
			System.out.println(1);
		}else if(N == 1){
			System.out.println(X);
		}else if(N % 2 == 0){
			return powerLove(X * X, N / 2);
		}else if(N % 2 != 0){
			return powerLove(X * X, N / 2) * X;
		}
		return -1;
	}

}
